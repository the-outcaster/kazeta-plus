# Allow passwordless management of system services and networking tools
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/systemctl
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/nmcli
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/bluetoothctl

# Allow passwordless execution of rfkill to manage wireless devices
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/sbin/rfkill

# Allow passwordless execution for shutdown and reboot
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/sbin/reboot, /usr/sbin/shutdown

# Allow passwordless execution for Kazeta+ helper scripts
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/kazeta-mount
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/kazeta-mount -u
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/kazeta-copy-logs
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/kazeta-wifi-setup

# Rule for the OTA upgrade script
%wheel ALL=(ALL:ALL) NOPASSWD: /tmp/kazeta-plus-upgrade-kit-*/upgrade-to-plus.sh
